generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // Your MongoDB connection string
}

model Note {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  userId     String   // Reference to Supabase user ID (uuid)
  title      String   
  content    String
  summary    String?   // Generated by AI
  tags       String[]  // AI or user-generated tags

  embedding  Float[] 

  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@index([userId])
  @@index([embedding])
}
